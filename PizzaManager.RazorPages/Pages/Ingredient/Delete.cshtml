@page
@model DeleteModel
@{
}

<h1>Supprimer l'ingrédient</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet ingrédient ?</h3>

<div>
    <h4>Informations sur l'ingrédient</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            <label asp-for="Ingredient.Nom"></label>
        </dd>
        <dt class="col-sm-2">
            Calories
        </dt>
        <dd class="col-sm-10">
            <label asp-for="Ingredient.NCal"></label>
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Supprimer" class="btn btn-danger"/> |
        <a asp-page="./Index">Retour à la liste</a>
    </form>
</div>