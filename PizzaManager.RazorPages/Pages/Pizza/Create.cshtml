@page
@model CreateModel
@{
}

<h1>Création d'une pizza.</h1>

<h4>Pizza</h4>
<hr/>

<form method="post">
    <div class="form-group">
        <label asp-for="Pizza.Nom"></label>
        <input asp-for="Pizza.Nom" class="form-control"/>
        <span asp-validation-for="Pizza.Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pizza.Pate.Id"></label>
        <select asp-for="Pizza.Pate.Id" class="form-control" asp-items="@(this.ViewData["SelectPates"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="Pizza.Pate.Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@(this.Model.IngredientsIds)"></label>
        <select asp-for="@(this.Model.IngredientsIds)" class="form-control" asp-items="@(this.ViewData["SelectIngredients"] as IEnumerable<SelectListItem>)" multiple></select>
        <span asp-validation-for="@(this.Model.IngredientsIds)" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>

</form>