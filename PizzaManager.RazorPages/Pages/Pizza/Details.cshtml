@page "{id:int}"
@model DetailsModel
@{
}

<h1>Détails de la pizza</h1>

<dl>
    <dt>
        Nom
    </dt>
    <dd>
        @(this.Model.Pizza.Nom)
    </dd>

    <dt>
        Pâte
    </dt>
    <dd>
        @(this.Model.Pizza.Pate.Nom)
    </dd>

    <dt>
        Ingrédients
    </dt>
    <dd>
        @(string.Join(", ", this.Model.Pizza.Ingredients.Select(i => i.Nom)))
    </dd>
</dl>